<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="../css/base.css" />
    <link rel="stylesheet" href="../css/header.css" />
    <link rel="stylesheet" href="../css/items.css" />
    <link rel="stylesheet" href="../css/saved.css" />
    <title>Document</title>
</head>

<body>
    <%- include("header")%>
    <%- include("loader") %>

    <% if (cart.length === 0){%>
    <h3>Your wish list is empty!</h3>
    <%}else{%>
    <h3>Your wish list</h3>
    <%} %>

    <span id="cart-num">

    </span>
    <div id="main-container">
        <div id="carts">

            <% for (i in cart){ 
          let CART = cart[i];
          let cartDetail = CART.cartdetails;
          for (j in cartDetail){
            let actualCart = cartDetail[j];
        %>

            <span id="cart-item">
                <div id="cart-sec-1">
                    <span id="cart-img">
                        <img class="cart-img" src="../font/<%= actualCart.pic %> " alt="" srcset="" />
                    </span>
                    <span id="cart-det">
                        <div id="name-price">
                            <span id="name"><%= actualCart.name %></span>
                            <span id="price">GHâ‚µ <%= actualCart.price.toFixed(2) %></span>

                        </div>
                        <div id="add">
                            <form onsubmit="shew()" id="view" action="/add-cart" method="post">
                                <input type="hidden" name="id" value="<%=CART.itemId%>" />
                                <button id="view" class="view" type="submit">
                                    Add to cart
                                </button>
                            </form>
                        </div>
                    </span>
                </div>
                <div id="cart-sec-2">


                    <form onsubmit="shew()" id="view" action="/det" method="post">
                        <input type="hidden" name="id" value="<%=CART.itemId%>" />
                        <button id="view" class="view" type="submit">

                            BUY NOW
                        </button>
                    </form>

                    <span id="remove">
                        <form onsubmit="shew()" action="/save" method="post">
                            <input type="hidden" name="id" value="<%=CART.itemId%>" />
                            <button id="remove-btn" type="submit">

                                Remove
                            </button>
                        </form>
                    </span>
                </div>
            </span>

            <%}}
    %>



            <%# }) %>
        </div>

    </div>

    <% if(cart.length > 0){%>
    <span id="checkout-sec">
        <div id="checkout">
            <form onsubmit="shew()" id="" action="/cart-one" method="post">
                <button id="checkout-btn" type="submit">ADD ALL TO CART</button>
            </form>
        </div>
    </span>
    <%} %>



    <%- include("viewed") %>

    </div>

    <%- include("footer") %>

</body>

<script src="../js/search.js"></script>

</html>