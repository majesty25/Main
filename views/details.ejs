                />
                <label class="radio-label" for="">black</label>

                <input
                  class="radio-input"
                  type="radio"
                  name="color"
                  id=""
                  value=""
                  required
                />
                <label class="radio-label" for="">blue</label>

                <input
                  class="radio-input"
                  type="radio"
                  name="color"
                  id=""
                  value=""
                  required
                />
                <label class="radio-label" for="">white</label>
              </div>
            </div>

            <div id="delivery">
              <em
                style="font-size: 19px"
                class="mdi mdi-rotate-0 mdi-calendar-month-outline"
              ></em>
              Delivery from <%= ITEM.shipping %> , 10 - 15 days
            </div>
          </div>

          <div id="description">
            <div class="desc">Description:</div>
            <div class="description"><%= ITEM.description %></div>
          </div>

          <div id="seller-container">
            <div id="seller">
              <div id="seller-name">
                Store - seller
                <div></div>
              </div>
              <div id="react">
                <div id="like">
                  <em class="mdi mdi-thumb-up-outline"></em>23
                </div>
                <div id="dislike">
                  <em class="mdi mdi-thumb-down-outline"></em>3
                </div>
              </div>

              <button class="seller-btn follow">Follow</button>
              <button class="seller-btn msg">Message</button>
            </div>

            <div id="seller-detail">
              <div id="about">
                <div class="about-value">224</div>
                <div class="about">followers</div>
              </div>

              <div id="about">
                <div class="about-value sells">23</div>
                <div class="about">views</div>
              </div>

              <div id="about">
                <div class="about-value sells">107</div>
