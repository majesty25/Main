<!-- MAIN HEADER -->
<script>
  function showAccount() {
    document.querySelector("#pop").style.display = "block";
  }

  function hideAccount() {
    document.querySelector("#pop").style.display = "none";
  }
</script>
<header>
  <!-- <div id="open-nav">&#9776;</div> -->
  <div id="logo">
    <a href="/">
      <img style="width: 100%" src="../font/others/log.png" alt="" srcset=""
    /></a>
  </div>
  <form
    action="/"
    method="post"
    onsubmit="shew()"
    id="search-form"
    autocomplete="off"
  >
    <div class="autocomplete">
      <input
        id="myInput"
        type="text"
        name="cat"
        placeholder="I'm looking for..."
      />
    </div>
    <input type="submit" value="search" />
    <a href="/help" title="Help"
      ><em
        style="font-size: 22px; margin-left: 10%"
        class="mdi mdi-help-circle-outline"
      ></em
    ></a>
  </form>
  <a href="/cart"
    ><em style="font-size: 25px" class="mdi mdi-cart-outline" title="Cart"></em>
    <% if (locals.count){%>
    <sup> <% if(locals.count){%> <%= count %> <%} %></sup>
    <%} %>
  </a>

  <i
    id="USER"
    onmouseover="showAccount()"
    class="mdi mdi-account-outline"
    style="font-size: 25px; margin-left: 30px"
  ></i>

  <!-- <a href="/login"
    ><i class="far fa-user" style="font-size: 18px; margin-left: 30px"></i
  ></a> -->
</header>

<div id="pop" onmouseover="showAccount()" onmouseout="hideAccount()">
  <form onsubmit="shew()" action="/account" method="get">
    <button type="submit" id="user-btn">
      <i style="margin-right: 5px" class="mdi mdi-account-outline"></i> Account
    </button>
  </form>
  <form onsubmit="shew()" action="/my-orders" method="get">
    <button id="user-btn">
      <i style="margin-right: 5px" class="mdi mdi-cart-arrow-down"></i> My
      orders
    </button>
  </form>

  <form onsubmit="shew()" action="/saved" method="get">
    <button id="user-btn">
      <em style="margin-right: 5px" class="mdi mdi-cards-heart-outline"></em>
      saved items
    </button>
  </form>

  <form onsubmit="shew()" action="/help" method="get">
    <button id="user-btn">
      <i style="margin-right: 5px" class="mdi mdi-message-question-outline"></i>
      Help center
    </button>
  </form>

  <% if (locals.userId){ %>
  <form onsubmit="shew()" action="/logout" method="get">
    <button id="user-btn">
      <i style="margin-right: 5px" class="mdi mdi-logout"></i> Log out
    </button>
  </form>

  <%} else{ %>
  <form onsubmit="shew()" action="/login" method="get">
    <button id="user-btn">
      <i style="margin-right: 5px" class="mdi mdi-login"></i> Log in
    </button>
  </form>

  <%}%>
  <!-- <button id="user-btn"></button> -->
</div>

<div id="subhead">
  <%- include("side-panel")%>
  <div id="logo-small">
    <a href="/">
      <img style="width: 100%" src="../font/others/log.png" alt="" srcset=""
    /></a>
  </div>
  <form action="/search" method="get">
    <button id="search">
      <em
        class="mdi mdi-magnify"
        style="font-size: 14px; margin-left: 0px"
      ></em>
    </button>
  </form>

  <a href="/cart"
    ><em
      style="font-size: 22px"
      class="mdi mdi-96px mdi-rotate-60 mdi-cart-outline"
    >
      <% if (locals.count){%>
      <sup> <% if(locals.count){%> <%= count %> <%} %></sup>
      <%} %>
    </em>
  </a>

  <!-- <i
    class="mdi mdi-account"
    id="USER"
    style="font-size: 18px; margin-left: 0px"
  ></i> -->
</div>

<script src="../js/search.js"></script>
