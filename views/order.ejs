<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/base.css" />
    <link rel="stylesheet" href="../css/header.css" />
    <link rel="stylesheet" href="../css/order.css" />
    <title>Document</title>
  </head>
  <body>
    <%- include("header")%> <%- include("loader") %>

    <div id="main-container">
      <div id="orders">
        <!-- const sum = carts[key]; -->
        <% if (orders.length === 0){%>
        <div id="container-head">You have not placed any order</div>
        <%}else{%>
        <div id="container-head">My orders</div>
        <%} %> <% for (let i in orders){ let order = orders[i]; let ORDERS =
        order.orderdetails; for (let k in ORDERS){ let ORDER = ORDERS[k]%>
        <div class="order">
          <div id="order-head">
            <span id="ID">ID:<%=order.orderId%></span>
            <span id="date"><%=order.date%></span>
          </div>
          <div id="order">
            <div id="order-det">
              <div id="order-img">
                <img id="IMG" src="../font/<%=ORDER.pic%>" alt="" srcset="" />
              </div>
              <div id="sec1">
                <div id="name"><%=ORDER.name%></div>
                <div id="others">
                  <span id="vty"><%=order.variety%></span>
                  <span id="qty">X<%=order.quantity%></span>
                </div>
              </div>
            </div>

            <div id="sec2">
              <button id="order-status">Pending</button>
            </div>
          </div>
        </div>
        <%} } %>
      </div>

      <%- include("viewed") %>
    </div>

    <%- include("footer") %>
  </body>
</html>
